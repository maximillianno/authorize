{% extends 'base.html.twig' %}

{% block title %}Magazine index{% endblock %}

{% block body %}
    <h1>Magazine index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Date</th>
                <th>Img</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for magazine in magazines %}
            <tr>
                <td>{{ magazine.id }}</td>
                <td>{{ magazine.name }}</td>
                <td>{{ magazine.description }}</td>
                <td>{{ magazine.date ? magazine.date|date('Y-m-d') : '' }}</td>
                <td>{{ magazine.img }}</td>
                <td>
                    <a href="{{ path('magazine_show', {'id': magazine.id}) }}">show</a>
                    <a href="{{ path('magazine_edit', {'id': magazine.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {{ pagerfanta(my_pager, 'twitter_bootstrap4') }}


    <a href="{{ path('magazine_new') }}">Create new</a>
{% endblock %}
